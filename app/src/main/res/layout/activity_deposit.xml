<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DepositActivity"
    android:padding="10dp"
    android:background="#00BCD4"
    >


    <LinearLayout
        android:id="@+id/layout2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/layout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="NotSibling">

        <TextView
            android:textSize="19sp"
            android:textColor="#FFF"
            android:text="User ID :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/userId_id"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:hint="Type Your User ID"
            android:background="@drawable/edit_shape"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/layout2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="NotSibling">

        <TextView
            android:textSize="19sp"
            android:textColor="#FFF"
            android:text="Amount :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/amountID"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:background="@drawable/edit_shape"
            android:padding="10dp"
            android:hint="Type Ammount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/layout3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="NotSibling">

        <TextView
            android:textSize="19sp"
            android:textColor="#FFF"
            android:text="Currency Type :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spinner_currencyID"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/layout4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="NotSibling">

        <TextView
            android:textSize="19sp"
            android:textColor="#FFF"
            android:text="Payment Method :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinner_ID"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout6"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/layout5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="NotSibling">


        <TextView
            android:textSize="19sp"
            android:textColor="#FFF"
            android:text="Number :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/numberID"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:inputType="number"
            android:hint="Type Your Phone Number"
            android:background="@drawable/edit_shape"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout7"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/layout6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="NotSibling">

        <TextView
            android:textSize="19sp"
            android:textColor="#FFF"
            android:text="Transaction ID :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/transactionID"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:background="@drawable/edit_shape"
            android:padding="10dp"
            android:hint="Transaction ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout8"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/layout7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="NotSibling">

        <TextView
            android:textSize="19sp"
            android:textColor="#FFF"
            android:text="Message :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/messageID"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_marginLeft="5dp"
            android:hint="This Message is optional"
            android:background="@drawable/edit_shape"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="#000" />
    </LinearLayout>

    <Button
        android:id="@+id/submitBtnID"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout8"
        android:layout_marginTop="29dp"
        android:text="Deposit"
        android:background="@drawable/edit_shape"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textColor="#000" />


</RelativeLayout>